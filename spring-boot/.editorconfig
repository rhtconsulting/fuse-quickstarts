# Editorconfig (http://editorconfig.org)

# Top level project directory for Fuse on Spring Boot
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation in Java
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{xml,xjb,wsdl,xsd}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
